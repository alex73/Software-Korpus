<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>searchServlet</servlet-name>
    <servlet-class>org.alex73.korpus.server.SearchServiceImpl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>grammarServlet</servlet-name>
    <servlet-class>org.alex73.korpus.server.GrammarServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>searchServlet</servlet-name>
    <url-pattern>/korpus/search</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>grammarServlet</servlet-name>
    <url-pattern>/korpus/grammar</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>korpusSearch.html</welcome-file>
  </welcome-file-list>

</web-app>
